{
  "name": "@btc/tools",
  "version": "1.0.0",
  "description": "BTC MES Console Development Tools",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./request": {
      "types": "./dist/request/index.d.ts",
      "import": "./dist/request/index.js"
    },
    "./mock": {
      "types": "./dist/mock/index.d.ts",
      "import": "./dist/mock/index.js"
    },
    "./cache": {
      "types": "./dist/cache/index.d.ts",
      "import": "./dist/cache/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "biome lint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@btc/bridge": "workspace:*",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/node": "^20.19.11"
  }
}
